#include	<iostream>
#include	<cstdlib>
using namespace	std;

int generateRandomNumber();
int getPlayerGuess();
void printAnswer(int number, int randomNumber);
void playGuessIt();

int main()
{
    cout << " Chao mung den voi game Doan So" << endl
         << "May tinh chon 1 so ngau nhien tu 1-100, hay doan so do!" << endl
         << "Moi lan choi ban co 10 diem, doan sai -1 diem, ket thuc khi doan dung hoac 0 diem" << endl << endl;
    int traloi;
    do {
    playGuessIt();
    cout << "Tiep tuc choi bam 1, ket thuc bam 0" << endl;
    cin >> traloi;
    }
    while(traloi != 0);
    return 0;
}

void playGuessIt()
{
    int guessAttempt = 0;
    int randomNumber = generateRandomNumber();
    int number;

    do {
        guessAttempt++;
        number = getPlayerGuess();
        printAnswer(number, randomNumber);
        
    }
    while(number != randomNumber and guessAttempt < 11);
    if (guessAttempt == 11) 
    {
            cout << "Ban da het lan doan! Game Over?" << endl << endl;
    }
    else cout  << "Ban doan dung sau " << guessAttempt << " lan." << endl
         << "Diem cua ban la : " << 10 - guessAttempt << " diem." << endl << endl;
}

int generateRandomNumber()
{
    srand(time(0));
    return rand() % 100 + 1;
}

int getPlayerGuess()
{
    int playerNumber;
    cout << endl << "Nhap so ban doan trong khoang 1 den 100: ";
    cin >> playerNumber;
    return playerNumber;
}

void printAnswer(int number, int randomNumber)
{
    if(number > randomNumber){
        cout << "So ban chon to hon so can doan." << endl;
    }
    else if(number < randomNumber) {
        cout << "So ban chon be hon so can doan." << endl;
    }
    else cout << "Chuc mung! Ban da doan dung." << endl;
}
